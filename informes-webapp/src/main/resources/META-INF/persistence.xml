		<class>telefonica.aaee.model.model977r.Trafico</class>
		<class>telefonica.aaee.model.model977r.TraficoInternacional</class>
		<class>telefonica.aaee.model.model977r.TraficoInternacionalPorNivel</class>
		

		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
