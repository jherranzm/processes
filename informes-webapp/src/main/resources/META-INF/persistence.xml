	<persistence-unit name="JPAInformesWebApp" transaction-type="RESOURCE_LOCAL">

		<class>telefonica.aaee.informes.model.Consulta</class>
		<class>telefonica.aaee.informes.model.Informe</class>
		<class>telefonica.aaee.informes.model.InformePestanya</class>
		<class>telefonica.aaee.informes.model.Pestanya</class>
		
		
		<!-- 977R -->
